@model IEnumerable<MovieApp.Models.TblAdmin>

@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="page-section movie" style="margin-top:15px;">
    <div class="container">
        <h2>Admin</h2>

        <p>
            <a asp-action="Create">Add Admin</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Email)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.AdminId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.AdminId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
