@model MovieApp.Models.AdminCode

@{
    ViewData["Title"] = "Authenticate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="page-section movie" style="margin-top:15px;">
    <div class="container">
        <h2>Authenticate</h2>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Authenticate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Admin Code</label>
                        <input type="password" asp-for="Code" class="form-control" autofocus />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</section>
