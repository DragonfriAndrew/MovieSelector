@model IEnumerable<MovieApp.Models.TblMovie>

@{
    ViewData["Title"] = "Gallery Homepage";
}



@using Microsoft.AspNetCore.Http


    <section class="page-section movie" style="margin-top:15px;">
        <div class="container">
            <h2 style="font-size:1.5em; font-family:'PT Sans Caption', sans-serif;">Gallery Homepage</h2>

            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <div class="row h-100 justify-content-center">


                @foreach (var item in Model)
                {
                    <a asp-action="Details" asp-route-id="@item.MovieId">
                        <img style="width:200px; padding-bottom:5px; margin-left:5px;margin-right:5px; height:315px" src="@Html.DisplayFor(modelItem => item.PosterLink)">
                    </a>
                }
            </div>
        </div>
    </section>
